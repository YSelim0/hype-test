{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "space-before-function-paren": 0,
        "eqeqeq": 0
    }
}
